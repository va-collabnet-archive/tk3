<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>build</actionName>
            <goals>
                <goal>-e</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <Env.MAVEN_OPTS>-ea -d64 -XX:+UseCompressedOops -Xmx6g -Xms2g -Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</Env.MAVEN_OPTS>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
        <action>
            <actionName>rebuild</actionName>
            <goals>
                <goal>-e</goal>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <Env.MAVEN_OPTS>-ea -d64 -XX:+UseCompressedOops -Xmx6g -Xms2g</Env.MAVEN_OPTS>
            </properties>
        </action>
        <action>
            <actionName>build-with-dependencies</actionName>
            <reactor>also-make</reactor>
            <goals>
                <goal>-e</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <Env.MAVEN_OPTS>-ea -d64 -XX:+UseCompressedOops -Xmx6g -Xms2g</Env.MAVEN_OPTS>
            </properties>
        </action>
    </actions>
